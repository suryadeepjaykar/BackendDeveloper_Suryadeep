@model BackendDeveloper_Suryadeep.Models.Department

@{
    ViewData["Title"] = "Create Department";
}

<h1>Create Department</h1>

<h4>Department</h4>
<hr />
<div>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Logo" class="control-label"></label>
            <input asp-for="Logo" class="form-control" />
            <span asp-validation-for="Logo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParentDepartmentId" class="control-label"></label>
            <select asp-for="ParentDepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

